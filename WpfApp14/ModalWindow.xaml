<Window x:Class="WpfApp14.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp14"
        mc:Ignorable="d"
        Title="ModalWindow" Height="150" Width="300" WindowStyle="None">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="0 10 0 0" Text="This account does not exist!"/>
        <StackPanel Orientation="Horizontal" Margin="0 50 0 0">
            <Button Width="100" Height="40" Margin="45 0 5 0" FontSize="6" Content="REGISTER" Click="Button_Click"></Button>
            <Button Width="100" Height="40" Content="FORGOT PASSWORD?" FontSize="6" Click="btn_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
